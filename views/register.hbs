<link rel="stylesheet" href="./css/register.css">

<div class="register-box">

  <div class="col col-md-8 col-lg-6 col-sm-10 m-auto p-0">

    <div class="wrapper p-0">

      <div class="form-content p-0">
        <h2>Register</h2>

        <input type="text" name="name" placeholder="name" id="name" >
        <input type="text" name="email" placeholder="email" id="email">
        <input type="text" name="phone" placeholder="number" id="number">
        <div class="password-section">
          <input type="password" name="password" placeholder="password" id="password">
          <input type="password" name="confirm-password" placeholder="confirm password" id="confirm-password">
        </div>
        <input type="submit" class="btn" id="submit-button" placeholder="Register">


        <a href="/login"> Already have an accout? login</a>


      </div>
    </div>

  </div>
</div>


<script src="js/register.js"></script>